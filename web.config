<configuration>
    <system.webServer>
        <!-- indicates that the hello.js file is a node.js application 
        to be handled by the iisnode module -->
        <handlers>
            <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
        </handlers>
		
        <!-- use URL rewriting to redirect the entire branch of the URL namespace
        to hello.js node.js application; for example, the following URLs will 
        all be handled by hello.js:
        
            http://localhost/node/express/hello/foo
            http://localhost/node/express/hello/bar
            
        -->
		
        <!-- exclude node_modules directory and subdirectories from serving
        by IIS since these are implementation details of node.js applications -->
		
        <!-- in order to enable logging and dev error logging, these 2 following iisnode settings must be set to true and
        the corresponding application pool (I.e.: IIS AppPool\AssetWatchService) must be given rights to write/modify the
        service folder, thru Security settings -->
    </system.webServer>
	
    <appSettings>
        <add key="deployPath" value="#deployPath"/>
    </appSettings>
</configuration>
